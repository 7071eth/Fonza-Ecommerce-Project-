    function validateLoginUser() {
		
				
         if( document.myFormLogin.email.value == "" ) {
            document.getElementById("emailAlert").innerHTML="Enter a valid username"
            document.myFormLogin.email.focus() ;
            return false;
         };
		 document.getElementById("emailAlert").innerHTML=""

		 
         if( document.myFormLogin.password_in.value == "" ) {
            document.getElementById("passwordAlert").innerHTML="Enter the password"
