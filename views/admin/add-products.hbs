<div class="container">
     <form class="form-inline" action="/admin/add-products" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title">
  </div>
  <div class="form-group">
    <label for="price">price</label>
    <input type="text" class="form-control" id="title" name="price">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" id="description" name="description">
  </div>

 {{#each data}}
  <div class="form-group">
    
    <label for="category">{{category}}</label>
    <select class="form-select" name="mainCategory" id="category">
    <option selected name="{{category}}">Select a category</option>

     {{#each bookings}}

    <option value={{_id}} > {{subcategory}}</option>

    {{/each}}
    
  </select>
  </div>

 {{/each}}
  
  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control" id="image" name="image" multiple>
  </div>
  
  <button type="submit" class="btn btn-info">Submit</button>
</form>

</div>

