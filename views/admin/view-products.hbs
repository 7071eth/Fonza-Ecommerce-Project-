<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mx-auto mb-3" style="width: 200px;">Add Product</a>
        </div>
        <table class="table">
  <thead>
    <tr style="background-color: rgb(195, 195, 195) ;">
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    
    <tr>
      <th scope="row">1</th>
      <td>{{this.title}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>Price : 20m$</td>
      <td><img style="width: 50px ; height:50px" src="/product-images/{{this._id}}.png" alt=""></td>
      <td>
                        <a href="/admin/update-user/{{this._id}}" class="btn btn-info">Update</a>
                        </td>
                        <td>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>

                    </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>