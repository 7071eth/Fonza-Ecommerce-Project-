<div class="container col-md-6 mt-2">
    <h1 class="d-flex justify-content-center">Enter offer details</h1>
    <form action="/admin/add-offers" method="post" class="mt-3">

        <div class="form-group mt-3">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group mt-3">
            <label for="percent">Percentage</label>
            <input type="text" class="form-control" id="percent" name="percent">
        </div>

        <div class="form-check mt-3" >
            <input onclick="prohide()" class="form-check-input" type="radio" name="brand" id="flexRadioDefault2" value="true"  checked>
            <label class="form-check-label" for="flexRadioDefault2">
                Category offer
            </label>
        </div>

        <div class="form-check"  >
            <input onclick="cathide()" class="form-check-input" type="radio" name="brand" id="flexRadioDefault1" value="false" >
            <label class="form-check-label" for="flexRadioDefault1">
                Product offer
            </label>
        </div>
        

        <div id="catOffer" > 
        <div class="row d-flex justify-content-center mt-100 dropdownform mt-3" id="dropdownform" >

            <label for="category">Add categories</label> <select id="choices-multiple-remove-button"
                    placeholder="Select categories" multiple name="brands">
                    {{#each brands}}
                    <option value="{{_id}}" name="brands">{{subcategory}}</option>
                    {{/each}}


                </select> 
        </div>
        </div>




        <div id="proOffer" hidden="true" >
        <div class="row d-flex justify-content-center mt-100 dropdownform mt-3" id="dropdownform2"  >
             <label for="product" style="font-weight: 400 ;">Add products</label> <select
                    id="choices-multiple-remove-button" placeholder="Select products" multiple name="products">
                    {{#each data}}
                    <option value="{{products._id}}">{{Datas.subcategory}} {{products.title}}</option>
                    {{/each }}


                </select> 
        </div>
        </div>



        <div class="form-group mt-3">
            <label for="start">Start date</label>
            <input type="date" class="form-control" id="start" name="start">
        </div>

        <div class="form-group mt-3">
            <label for="end">End Date</label>
            <input type="date" class="form-control" id="end" name="end">
        </div>





        <div class="d-flex justify-content-center">

            <button type="submit" class="btn btn-success mt-3">Submit</button>
        </div>

    </form>

</div>

<script>
    $(document).ready(function () {

        var multipleCancelButton = new Choices('#choices-multiple-remove-button', {
            removeItemButton: true,

            searchResultLimit: 5,
            renderChoiceLimit: 10
        });


    });
</script>

<script>
    function prohide(){

        document.getElementById('proOffer').hidden=true
        document.getElementById('catOffer').hidden=false

    }

    function cathide(){

            document.getElementById('catOffer').hidden=true
            document.getElementById('proOffer').hidden=false
    }
    
</script>